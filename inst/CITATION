year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)
title <- paste0(meta$Package, ": ", meta$Title)

bibentry(bibtype = "Manual",
         title = title,
         author = c(person("Stefan", "Roediger"),
                    person("Michal", "Burdukiewicz")),
         year = year,
         note = note,
         url = "http://CRAN.R-project.org/package=chipPCR")
